<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kingcar.SelectCourseActivity">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:src="@drawable/back"
            android:contentDescription="코스 선택하기"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코스 선택하기"
            android:textSize="16sp"
            android:textColor="@color/gray20"
            android:textStyle="bold"
            />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/courseTextLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="@color/gray80"
        app:boxBackgroundColor="@color/gray80"
        app:hintEnabled="false"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/courseTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColorHint="@color/gray50"
            android:textColor="@color/white"
            android:hint="코스를 직접 입력해주세요."
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/recommendText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="추천 코스"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/gray20"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/courseTextLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/recommendText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/itemImageView1"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/recommendText"
            android:scaleType="centerCrop"
            android:layout_marginTop="250dp"
            android:src="@drawable/hangang_course"/>
        <ImageView
            android:id="@+id/itemImageView2"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/itemImageView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/gyeongbok_course"/>
                <ImageView
                    android:id="@+id/itemImageView"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/itemImageView2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/gyeongbok_course"/>
            </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/complete"
            android:layout_width="match_parent"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/main"
            android:textColor="@color/gray90"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            app:cornerRadius="8dp"
            android:text="완료"
            android:enabled="true"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>